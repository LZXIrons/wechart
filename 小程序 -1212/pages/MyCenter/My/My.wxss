/* pages/MyCenter/My/My.wxss */
.my-ctn{
    position: fixed;
    height: 100%;
    width: 100%;
    background: #F3F3F3;
    overflow-x: auto;
}
.head-ctn{
    width: 100%;
    height: 280rpx;
    padding: 76rpx 30rpx;
    box-sizing: border-box;
    background: url("https://image.360lj.com/wechat/img/header_bg.jpg") no-repeat 0 0;
    -webkit-background-size: 100% 100%;
}
.more{
    float: right !important;
    line-height: 128rpx;
}
.avatar{
    width: 128rpx;
    height: 128rpx;
    border: 1px red #fff;
    border-radius: 3px;
    overflow: hidden;
    float: left;
}
.avatar image{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.user-info{
    line-height: 128rpx;
    float: left;
    margin-left: 30rpx;
    margin-top:15rpx;
}
.user-info>text{
    display: block;
    line-height: normal;
    font-size: 28rpx;color: #fff;
}
.user-name{
    font-size: 32rpx !important;
    color: #fff;
    margin-bottom: 25rpx;
}
/*已认证图标*/
.certified{
    vertical-align: sub;
    display: inline-block;
    width: 78rpx;
    height: 32rpx;
    background: url("https://image.360lj.com/wechat/img/my_sprites.png") no-repeat 0 0;
    background-size: 322rpx 85rpx;
}
/*未认证图标*/
.uncertified{
    vertical-align: sub;
    display: inline-block;
    width: 84rpx;
    height: 34rpx;
    background: url("https://image.360lj.com/wechat/img/my_sprites.png") no-repeat -90rpx 0;
    background-size: 322rpx 85rpx;
}

/*设置&& 选项*/
.option-ctn{
    display: block;
}
.option-ctn>navigator:nth-of-type(1){
    margin: 20rpx 0;
}
.option-ctn>navigator:last-child{
    margin: 20rpx 0;
}
.option-ctn>navigator{
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 30rpx;
}
.option-ctn>navigator>.icon-right{
    float: right;
    font-size: 40rpx;
    color: #808080;
}
.option-ctn>navigator>text{
    margin-left: 20rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #333333;
}
.option-ctn>navigator>icon{
    line-height: 90rpx;
}
